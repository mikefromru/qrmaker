MDBoxLayout:
    orientation: 'vertical'
    spacing: dp(30)
    padding: dp(30)

    MDBoxLayout:
        id: my_card
        orientation: 'vertical'
        opacity: 1
        #md_bg_color: 'gray'
        padding: dp(20)
        pos_hint: {'center_x': .5, 'center_y': .1} 
       
        MDLabel:
            text: 'Qrmaker'
            halign: 'center'
            font_size: '22sp'
            bold: True

        MDTextField:
            id: text_field
            size_hint_x: .7
            #mode: 'round'
            hint_text: 'Type link or text'
            pos_hint: {'center_x': .5, 'center_y': .5} 
            font_size: '18sp'
            bold: True

        MDFillRoundFlatButton:
            text: 'Create'
            pos_hint: {'center_x': .5, 'center_y': .5} 
            on_release: app.create_qrcode()
 
    MDBoxLayout:
        id: result
        orientation: 'vertical'
        opacity: 0
        size_hint_y: 1
        spacing: dp(20)
        pos_hint: {'center_x': .5, 'center_y': .5} 

        Image:
            id: qrcode_image
            
    MDBoxLayout:
        orientation: 'horizontal'
        id: buttons
        opacity: 0
        size_hint: .5, 1
        pos: self.parent.pos
        pos_hint: {'center_x': .5} 
        
        MDFloatLayout:
            MDFillRoundFlatIconButton:
                text: 'Download'
                icon: 'download'
                pos_hint: {'center_x': .2, 'center_y': .5} 
                on_release: app.download()

            MDFillRoundFlatIconButton:
                icon: 'share'
                text: 'Share'
                pos_hint: {'center_x': .8, 'center_y': .5} 
                on_release: app.download()

